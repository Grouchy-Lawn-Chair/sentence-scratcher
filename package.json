{
  "name": "sentence-scratcher",
  "version": "1.0.49",
  "private": true,
  "homepage": "https://grouchy-lawn-chair.github.io/sentence-scratcher",
  "dependencies": {
    "@tiptap/extension-highlight": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "dale-chall": "^2.0.1",
    "gh-pages": "^5.0.0",
    "use-sync-external-store": "^1.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "update:dale": "node scripts/update-dale.js",
    "bump": "npm version patch --no-git-tag-version",
    "build": "cross-env REACT_APP_VERSION=$npm_package_version react-scripts build",
    "predeploy": "npm run bump && npm run build",
    "deploy": "gh-pages -d build -r https://github.com/Grouchy-Lawn-Chair/sentence-scratcher.git"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
