\r\n        <div className=\"version-badge\">Version {VERSION}</div>\r\n\r\n        {/* theme buttons, right aligned on wide screens */}\r\n        <div className=\"mt-2\">\r\n          <ThemeToggle />\r\n        </div>\r\n\r\n        {/* target grade row */}\r\n        <div className=\"top-controls flex flex-wrap items-center gap-2 mt-3\">\r\n          <label htmlFor=\"target-grade\">Target Grade Level:</label>\r\n          <select\r\n            id=\"target-grade\"\r\n            value={target}\r\n            onChange={(e) => setTarget(parseInt(e.target.value, 10))}\r\n          >\r\n            {GRADE_OPTIONS.map((g) => (\r\n              <option key={g} value={g}>Grade {g}</option>\r\n            ))}\r\n          </select>\r\n        </div>\r\n\r\n        {/* legend and hard word toggle */}\r\n        <div className=\"legend-row flex flex-wrap items-center gap-4 mt-3\">\r\n          <div className=\"flex items-center gap-2\">\r\n            <span className=\"legend-red w-3 h-3 border inline-block\" />\r\n            <span>Very hard, 25 plus words, or grade plus 3 with 18 plus words</span>\r\n          </div>\r\n          <div className=\"flex items-center gap-2\">\r\n            <span className=\"legend-yellow w-3 h-3 border inline-block\" />\r\n            <span>Slightly over, 20 plus words, or grade plus 1 with 14 plus words</span>\r\n          </div>\r\n\r\n          <label className=\"ml-auto inline-flex items-center gap-2\">\r\n            <input\r\n              type=\"checkbox\"\r\n              checked={showHard}\r\n              onChange={(e) => setShowHard(e.target.checked)}\r\n            />\r\n            <span className=\"legend-underline-purple\">Aa</span>\r\n            <span>Likely hard word</span>\r\n          </label>\r\n        </div>\r\n\r\n        {/* stats strip */}\r\n        <div className=\"flex flex-wrap gap-3 text-sm mt-3\">\r\n          <div className=\"stat-chip\">Words, {stats.words}</div>\r\n          <div className=\"stat-chip\">Sentences, {stats.sentences}</div>\r\n          <div className=\"stat-chip\">Grade, {stats.grade == null ? \"窶能" : stats.grade.toFixed(1)}</div>\r\n          <div className=\"stat-chip\">Ease, {stats.ease == null ? \"窶能" : stats.ease.toFixed(1)}</div>\r\n        </div>\r\n      </div>\r\n\r\n      {/* editor area */}\r\n      <TiptapEditor\r\n        targetGrade={target}\r\n        showHardWords={showHard}\r\n        onShowHardWordsChange={setShowHard}\r\n        onStats={(s) => setStats({\r\n          words: s.wordCount ?? 0,\r\n          sentences: s.sentenceCount ?? 0,\r\n          grade: typeof s.grade === \"number\" ? s.grade : null,\r\n          ease: typeof s.ease === \"number\" ? s.ease : null\r\n        })}\r\n      />\r\n\r\n      {/* help accordion lives below, unchanged */}\r\n      {/* ...your existing Help accordion component or markup... */}\r\n    </div>\r\n  );\r\n}\r\n"],"mappings":"AAAA;AACA,MAAO,CAAAA,KAAK,EAAIC,SAAS,CAAEC,QAAQ,KAAQ,OAAO,CAClD,MAAO,CAAAC,WAAW,KAAM,eAAe,CACvC,MAAO,CAAAC,YAAY,KAAM,gBAAgB,CAAC,OAAAC,GAAA,IAAAC,IAAA,CAAAC,IAAA,IAAAC,KAAA,yBAE1C,KAAM,CAAAC,OAAO,CAAGC,OAAO,CAACC,GAAG,CAACC,iBAAiB,EAAI,EAAE,CAEnD;AACA,KAAM,CAAAC,aAAa,CAAG,CAAC,CAAC,CAAE,CAAC,CAAE,EAAE,CAAC,CAEhC,cAAe,SAAS,CAAAC,GAAGA,CAAA,CAAG,CAC5B;AACA,KAAM,CAACC,MAAM,CAAEC,SAAS,CAAC,CAAGd,QAAQ,CAAC,IAAM,CACzC,GAAI,CACF,KAAM,CAAAe,KAAK,CAAGC,YAAY,CAACC,OAAO,CAAC,eAAe,CAAC,CACnD,KAAM,CAAAC,CAAC,CAAGH,KAAK,CAAGI,QAAQ,CAACJ,KAAK,CAAE,EAAE,CAAC,CAAG,CAAC,CACzC,MAAO,CAAAJ,aAAa,CAACS,QAAQ,CAACF,CAAC,CAAC,CAAGA,CAAC,CAAG,CAAC,CAC1C,CAAE,KAAM,CACN,MAAO,EAAC,CACV,CACF,CAAC,CAAC,CAEF;AACA,KAAM,CAACG,QAAQ,CAAEC,WAAW,CAAC,CAAGtB,QAAQ,CAAC,IAAM,CAC7C,GAAI,CAAE,MAAO,CAAAgB,YAAY,CAACC,OAAO,CAAC,YAAY,CAAC,GAAK,GAAG,CAAE,CAAE,KAAM,CAAE,MAAO,KAAI,CAAE,CAClF,CAAC,CAAC,CAEF;AACA,KAAM,CAACM,KAAK,CAAEC,QAAQ,CAAC,CAAGxB,QAAQ,CAAC,CAAEyB,KAAK,CAAE,CAAC,CAAEC,SAAS,CAAE,CAAC,CAAEC,KAAK,CAAE,IAAI,CAAEC,IAAI,CAAE,IAAK,CAAC,CAAC,CAEvF7B,SAAS,CAAC,IAAM,CACd,GAAI,CAAEiB,YAAY,CAACa,OAAO,CAAC,eAAe,CAA